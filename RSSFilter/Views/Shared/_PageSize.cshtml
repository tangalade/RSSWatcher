@model RSSFilter.Common.Paging

<div class="page-size-items">
    <span class="count">
        @if (Model.NumRows == 0)
        {
            <text>
                0 of 0
            </text>
        }
        else
        {
            <text>
                @((Model.PageNum - 1) * Model.PageSize + 1) -
                @(Math.Min(Model.PageNum * Model.PageSize, Model.NumRows))
                of
                @(Model.NumRows)
            </text>
        }
    </span>
    <span>
        Items per page:
    </span>
    @foreach (var pageSize in Model.SuggestedPageSizes)
    {
        <span class="page-size-item">
            @if (Model.PageSize != pageSize)
                {
                @Html.ActionLink(pageSize.ToString(), "PageSize", new { pageSize = pageSize })
            }
            else
            {
                @Html.DisplayFor(r => pageSize)
            }
        </span>
    }
</div>
